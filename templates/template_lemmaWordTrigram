##################### Unigram (FEATURE X LABEL)
##################### WORD
U00:%x[-2,0]
U01:%x[-1,0]
U02:%x[0,0]
U03:%x[1,0]
U04:%x[2,0]
###################### LEMMA
U05:%x[-2,2]
U06:%x[-1,2]
U07:%x[0,2]
U08:%x[1,2]
U09:%x[2,2]
###################### WORD TRIGRAM FEATURES
U10:%x[-2,0]/%x[-1,0]/%x[0,0]
U11:%x[0,0]/%x[1,0]/%x[2,0]
###################### LEMMA TRIGRAM FEATURES
U12:%x[-2,2]/%x[-1,1]/%x[0,2]
U13:%x[0,2]/%x[1,1]/%x[2,2]
