##################### Unigram (FEATURE X LABEL)
##################### WORD
U00:%x[-2,0]
U01:%x[-1,0]
U02:%x[0,0]
U03:%x[1,0]
U04:%x[2,0]
###################### LEMMA
U05:%x[-2,2]
U06:%x[-1,2]
U07:%x[0,2]
U08:%x[1,2]
U09:%x[2,2]
###################### COMBINED (WORD/LEMMA) FEATURE
U10:%x[-2,0]/%x[-2,2]
U11:%x[-1,0]/%x[-1,2]
U12:%x[0,0]/%x[0,2]
U13:%x[1,0]/%x[1,2]
U14:%x[2,0]/%x[2,2]
###################### Bigram (FEATURE x LABEL0 x LABEL-1)
