##################### Unigram (FEATURE X LABEL)
##################### WORD
U00:%x[-2,0]
U01:%x[-1,0]
U02:%x[0,0]
U03:%x[1,0]
U04:%x[2,0]
###################### POS
U05:%x[-2,1]
U06:%x[-1,1]
U07:%x[0,1]
U08:%x[1,1]
U09:%x[2,1]
###################### WORD TRIGRAM FEATURES
U10:%x[-2,0]/%x[-1,0]/%x[0,0]
U11:%x[0,0]/%x[1,0]/%x[2,0]
###################### POS TRIGRAM FEATURES
U12:%x[-2,1]/%x[-1,1]/%x[0,1]
U13:%x[0,1]/%x[1,1]/%x[2,1]
###################### Bigram (FEATURE x LABEL0 x LABEL-1)
